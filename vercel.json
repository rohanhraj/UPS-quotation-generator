{
    "version": 2,
    "functions": {
        "api/preview.js": {
            "memory": 512,
            "maxDuration": 30,
            "includeFiles": "{views/**,public/assets/**,assets/**}"
        },
        "api/generate.js": {
            "memory": 1024,
            "maxDuration": 60,
            "includeFiles": "{views/**,public/assets/**,assets/**}"
        },
        "api/health.js": {
            "memory": 128,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/preview",
            "destination": "/api/preview"
        },
        {
            "source": "/api/generate",
            "destination": "/api/generate"
        },
        {
            "source": "/api/health",
            "destination": "/api/health"
        }
    ]
}